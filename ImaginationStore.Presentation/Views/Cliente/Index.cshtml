
@{
    ViewBag.Title = "Index";

}


<div class="p-3 bg-white">
    <form method="post">
        <!--CADASTRAR CLIENTE-->
        <fieldset>
            <legend>Informações Pessoais</legend>
            <table cellspacing="10">
                <tr>
                    <td>
                        <label for="codigo">Código: </label>
                    </td>
                    <td align="left">
                        @model ImaginationStore.Domain.Entities.Cliente
                        @using (Html.BeginForm())
                        {

                        <label>Codigo:</label> @Html.TextBox("CodigoCliente", "Codigo", "Seu codigo", new { maxlength = 5, type = "numeral" })

                        <button type="submit">Enviar</button>
                        }
                    <td class="col-75" align="left">
                        @Html.TextBox("Codigoe", "", new { maxlength = 5, type = "numeral", method = "get", style = "border-color:blue", disabled = ""})

                        @Html.TextBox("CodigoCliente", "", new { maxlength = 5, type = "numeral", method = "get" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="nome">Nome: </label>
                    </td>
                    <td class="col-75" align="left">
                        @Html.TextBox("Nome", "", new {type = "text", method = "get", style = "border-color:black", placeholder = "Seu nome..." })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="tefefone">Telefone: </label>
                    </td>
                    <td class="col-75" align="left">
                        @Html.TextBox("Telefone", "", new { type = "tel", method = "get", style = "border-color:blue", placeholder = "ex.:(DDD) 1234-5678",
                       pattern = "[0-9]{3}-[0-9]{3}-[0-9]{4}", required = "" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="filiacao">Filiação: </label>
                    </td>
                    <td class="col-75" align="left">
                        @Html.TextBox("Filiação", "", new {type = "text", method = "get", style = "border-color:black", placeholder = "Sua filiação..." })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="limiteCredito">Limite de Crédito: </label>
                    </td>
                    <td class="col-75" align="left">
                        @Html.TextBox("limiteCredito", "", new { type = "double", method = "get", style = "border-color:blue", placeholder = "ex.:500" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="status">Status do Cliente: </label>
                    </td>
                    <td class="col-75" align="left">
                        <select style="border-color:black">
                            <option value="1">BOM</option>
                            <option value="2">MÉDIO</option>
                            <option value="3">RUIM</option>
                        </select>
                    </td>
                </tr>
            </table>
        </fieldset>
    </form>
    <br />
    <form method="get" action=".">
        <!-- ENDEREÇO -->
        <table cellspacing="10">
            <tr>
                <td>
                    <label for="cep">Cep: </label>
                </td>
                <td class="col-75" align="left">
                    @Html.TextBox("cep", "", new { type = "int", method = "get", style = "border-color:black", placeholder = "ex.:12345678" })
                </td>
            </tr>
            <tr>
                <td>
                    <label for="rua">Rua/Av:</label>
                </td>
                <td class="col-75" align="left">
                    @Html.TextBox("rua", "", new {type = "text", method = "get", style = "border-color:blue" })
                </td>
                <td>
                    <label for="numero">Numero:</label>
                </td>
                <td class="col-75" align="left">
                    @Html.TextBox("numero", "", new { type = "int", method = "get", style = "border-color:blue", size = "4", maxlength = "5" })
                </td>
            </tr>
            <tr>
                <td>
                    <label for="bairro">Bairro: </label>
                </td>
                <td class="col-75" align="left">
                    @Html.TextBox("bairro", "", new { type = "text", method = "get", style = "border-color:black" })
                </td>
            </tr>
            <tr>
                <td>
                    <label for="cidade">Cidade: </label>
                </td>
                <td class="col-75" align="left">
                    @Html.TextBox("cidade", "", new { type = "text", method = "get", style = "border-color:blue" })
                </td>
            </tr>
            <tr>
                <td>
                    <label for="estado">Estado: </label>
                </td>
                <td class="col-75" align="left">
                    @Html.TextBox("uf", "", new { type = "text", method = "get", style = "border-color:black", size = "1", maxlength = "2" })
                </td>
            </tr>
        </table>
        <br />

    </form>
    <br />
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {

            function limpa_formulário_cep() {
                // Limpa valores do formulário de cep.
                $("#rua").val("");
                $("#bairro").val("");
                $("#uf").val("");
                $("#cidade").val("");
            }

            //Quando o campo cep perde o foco.
            $("#cep").blur(function () {

                //Nova variável "cep" somente com dígitos.
                var cep = $(this).val().replace(/\D/g, '');

                //Verifica se campo cep possui valor informado.
                if (cep != "") {

                    //Expressão regular para validar o CEP.
                    var validacep = /^[0-9]{8}$/;

                    //Valida o formato do CEP.
                    if (validacep.test(cep)) {

                        //Preenche os campos com "..." enquanto consulta webservice.
                        $("#rua").val("...");
                        $("#bairro").val("...");
                        $("#uf").val("...");
                        $("#cidade").val("...");

                        //Consulta o webservice viacep.com.br/
                        $.getJSON("https://viacep.com.br/ws/" + cep + "/json/?callback=?", function (dados) {

                            if (!("erro" in dados)) {
                                //Atualiza os campos com os valores da consulta.
                                $("#rua").val(dados.logradouro);
                                $("#bairro").val(dados.bairro);
                                $("#uf").val(dados.uf);
                                $("#cidade").val(dados.localidade);
                            } //end if.
                            else {
                                //CEP pesquisado não foi encontrado.
                                limpa_formulário_cep();
                                alert("CEP não encontrado.");
                            }
                        });
                    } //end if.
                    else {
                        //cep é inválido.
                        limpa_formulário_cep();
                        alert("Formato de CEP inválido.");
                    }
                } //end if.
                else {
                    //cep sem valor, limpa formulário.
                    limpa_formulário_cep();
                }
            });
        });
    </script>
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@@ViewBag.Title - Imagination Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="pb-0 m-0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary rounded fixed-top">
        <a class="navbar-brand" href="#">Imagination Store</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Clientes", "Index", "Cliente", new { @class = "btn btn-primary" })
            </li>
        </ul>
    </nav>

    <div class="body-content p-3 bg-primary">
        @RenderBody()
        <div>
            <hr class="m-0" />
            <footer>
                <p>&copy; @DateTime.Now.Year - Imagination Store</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
